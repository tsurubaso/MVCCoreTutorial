@model IEnumerable<MVCCoreTutorial.Models.Domain.Person>
@{

    // Layout = "_Layout1";
}
<div class="mt-2" style="width:50%">
    <div class="row">
        <h2>Person</h2>
        <div class="col-md-4">
            <a asp-controller="PersonController1" asp-action="AddPerson" class="btn btn-primary">Add Persons</a>

        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Action</th>


                </tr>
                @foreach(var person in Model)
                {
                    <tr>
                        <td>@person.Name</td>
                        <td>@person.Email</td>
                        <td>
                            
                            <a class="btn btn-success" href="/PersonController1/EditPerson?id=@person.Id">Edit</a>
                            <a class="btn btn-danger" href="/PersonController1/DeletePerson?id=@person.Id">Delete</a>
                        </td>
                    </tr>
                    
                }
                

            </thead>

        </table>

    </div>

</div>