@model IEnumerable<MVCCoreTutorial.Models.Domain.Person>
@{
}
<div class="mt-2" style="width:50%">
    <div class="row">
        <h2>Person</h2>
        <div class="col-md-4">
            <a href="/PersonController1/AddPerson" class="btn btn-primary">Add Persons</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Action</th>


                </tr>
                @foreach(var person in Model)
                {
                    <tr>
                        <td>@person.Name</td>
                        <td>@person.Email</td>
                        <td>
                            <a>Edit</a>
                            <a>Delete</a>
                        </td>
                    </tr>
                    
                }
                

            </thead>

        </table>

    </div>

</div>